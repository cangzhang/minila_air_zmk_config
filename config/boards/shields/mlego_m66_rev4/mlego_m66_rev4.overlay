#include "mlego_m66_rev4_layout.dtsi"

/ {
   model = "mlego m66, rev4";

   //compatible = "nice-nano-v2";

    m66_layout: m66_layout {
        compatible = "zmk,physical-layout";
        display-name = "m66 default layout";
        kscan = <&kscan_m66>;
   };

   chosen {
     zmk,physical-layout = &m66_layout;
     zephyr,console = &cdc_acm_uart;
   };

   kscan_m66: kscan_m66 {
     compatible = "zmk,kscan-gpio-matrix";
     diode-direction = "col2row";
     wakeup-source; 
     col-gpios =   <&shift_reg 6  (GPIO_ACTIVE_HIGH)>  // U5 QG -> C0
                 , <&shift_reg 5  (GPIO_ACTIVE_HIGH)>  // U5 QF -> C1
                 , <&shift_reg 4  (GPIO_ACTIVE_HIGH)>  // U5 QE -> C2
                 , <&shift_reg 3  (GPIO_ACTIVE_HIGH)>  // U5 QD -> C3
                 , <&shift_reg 2  (GPIO_ACTIVE_HIGH)>  // U5 QC -> C4
                 , <&shift_reg 1  (GPIO_ACTIVE_HIGH)>  // U5 QB -> C5
                 , <&shift_reg 0  (GPIO_ACTIVE_HIGH)>  // U5 QA -> C6
                 , <&shift_reg 7  (GPIO_ACTIVE_HIGH)>  // U5 QH -> C7
                 , <&shift_reg 15 (GPIO_ACTIVE_HIGH)>  // U4 QH -> C8
                 , <&shift_reg 9  (GPIO_ACTIVE_HIGH)>  // U4 QB -> C9
                 , <&shift_reg 10 (GPIO_ACTIVE_HIGH)>  // U4 QC -> C10
                 , <&shift_reg 11 (GPIO_ACTIVE_HIGH)>  // U4 QD -> C11
                 , <&shift_reg 12 (GPIO_ACTIVE_HIGH)>  // U4 QE -> C12
                 , <&shift_reg 13 (GPIO_ACTIVE_HIGH)>  // U4 QF -> C13
                 , <&shift_reg 8  (GPIO_ACTIVE_HIGH)>  // U4 QA -> C14
                 , <&shift_reg 14 (GPIO_ACTIVE_HIGH)>  // U4 QG -> C15
                 ;
     row-gpios =   <&pro_micro 0  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // P0.17 -> R0
                 , <&pro_micro 7  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // P0.20 -> R1
                 , <&pro_micro 8  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // P0.22 -> R2
                 , <&pro_micro 9  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // P0.24 -> R3
                 , <&pro_micro 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // P1.00 -> R4
                 , <&pro_micro 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // P0.11 -> R5
                 , <&pro_micro 12 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // P1.04 -> R6
                 , <&pro_micro 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // P1.06 -> R7
                 ;
   };
};

&pinctrl {
    spi0_default: spi0_default {
        group1 {
            psels =   <NRF_PSEL( SPIM_SCK, 1, 13)> 
                    , <NRF_PSEL(SPIM_MOSI, 0, 10)>
                    ;
        };
    };
    spi0_sleep: spi0_sleep {
        group1 {
            psels =   <NRF_PSEL( SPIM_SCK, 1, 13)> 
                    , <NRF_PSEL(SPIM_MOSI, 0, 10)>
                    ;
            low-power-enable;
        };
    };
};

&pro_micro_i2c {
    status = "disabled";
};

board_spi: &spi0 {
  status = "okay";
  compatible = "nordic,nrf-spim";
  pinctrl-0 = <&spi0_default>;
  pinctrl-1 = <&spi0_sleep>;
  pinctrl-names = "default", "sleep";
  cs-gpios = <&gpio0 9 GPIO_ACTIVE_LOW> ;

  shift_reg: 595@0 {
    compatible = "zmk,gpio-595";
    status = "okay";
    gpio-controller;
    spi-max-frequency = <2000000>;
    #gpio-cells = <2>;
    reg = <0>;
    ngpios = <16>;
  };
};

&usbd {
    status = "okay";
    cdc_acm_uart: cdc_acm_uart {
        compatible = "zephyr,cdc-acm-uart";
    };
};
